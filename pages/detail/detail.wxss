.pop-input {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}
.pop-input-main {
  width: 540rpx;
  border-radius: 25rpx;
  background: #f9f9f9;
  overflow: hidden;
  position: absolute;
  z-index: 10;
  left: 105rpx;
  top: 30%;
  transform: scale(2);
  animation: maxtomin 0.1s forwards ease-out;
  opacity: 0;
}
.pop-input-main.close {
  transform: scale(1);
  opacity: 1;
  animation: closeMaskLayer 0.2s forwards ease-out;
}
.pop-input-main .pop-input-title {
  line-height: 120rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}
.pop-input-main .pop-input-content {
  padding: 0 32rpx;
  padding-bottom: 24rpx;
}
.pop-input-main .pop-input-content input {
  width: 100%;
  height: 50rpx;
  border: 1rpx solid #999b9d;
  font-size: 26rpx;
  padding-left: 10rpx;
}
.pop-input-main .pop-input-content input.isNull {
  border-color: #f00;
}
.pop-input-main .pop-btn-box {
  width: 100%;
  height: 89rpx;
  display: flex;
  border-top: 1rpx solid #d9d9dd;
}
.pop-input-main .pop-btn-box view {
  flex: 1;
  color: #007aff;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;
  border-right: 1rpx solid #d9d9dd;
}
.pop-input-main .pop-btn-box view:last-child {
  border-right: 0;
}
.pop-input-main .pop-btn-box view:active {
  background: #ebebeb;
}
.pop-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1;
  opacity: 0;
  animation: maskLayer 0.1s forwards ease-out;
}
.pop-mask.close {
  opacity: 1;
  animation: closeMaskLayer 0.2s forwards ease-out;
}
@keyframes maxtomin {
  form {
    transform: scale(2);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}
