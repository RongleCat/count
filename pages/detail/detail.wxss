}
.content-block {
  width: 710rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  position: relative;
  background: #fff;
  border-radius: 20rpx;
}
.content-block:last-child {
  margin-bottom: 0;
}
.no-mb {
  margin-bottom: 0;
}
.block-mt {
  height: 20rpx;
  width: 100%;
  display: block;
}
.release-info {
  width: 100%;
  min-height: 148rpx;
  padding-left: 148rpx;
  position: relative;
  border-bottom: 1rpx #ddd solid;
}
.release-info .info-nickname {
  font-size: 40rpx;
  line-height: 60rpx;
  color: #444;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dashed #ccc;
}
.release-info .info-release-time {
  font-size: 28rpx;
  line-height: 58rpx;
  color: #999;
}
.release-info .img-head {
  width: 128rpx;
  height: 128rpx;
  display: block;
  border: 1rpx dashed #ccc;
  border-radius: 10rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.release-info .take-state {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 26rpx;
  color: #fff;
  background: #33cc00;
  padding: 5rpx 10rpx;
}
.order-title {
  padding-top: 15rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  word-break: break-all;
}
.form-image-box {
  width: 100%;
  margin-top: 15rpx;
  display: flex;
}
.form-image-box .image-box {
  width: 126rpx;
  height: 126rpx;
  min-width: 126rpx;
  margin-right: 10rpx;
  position: relative;
}
.form-image-box .image-box image {
  width: 100%;
  height: 100%;
  display: block;
}
.form-image-box .image-box:last-child {
  margin-right: 0;
}
.end-info {
  padding-top: 10rpx;
}
.end-item {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #999;
}
.goods-item {
  border-bottom: 1rpx #ccc dashed;
  padding: 20rpx;
  padding-right: 230rpx;
  position: relative;
  line-height: 50rpx;
}
.goods-item .good-name {
  font-size: 30rpx;
  color: #333;
}
.goods-item .good-info {
  font-size: 30rpx;
  color: #f66;
}
.goods-item .sale-info {
  font-size: 26rpx;
  color: #999;
}
.t-r {
  text-align: right;
}
.count-info {
  line-height: 30rpx;
  font-size: 30rpx;
  padding-top: 20rpx;
  color: #333;
}
.count-info .font-money {
  color: #f66;
  font-weight: bold;
}
.select-container {
  width: 200rpx;
  position: absolute;
  height: 100%;
  top: 0;
  right: 0;
}
.btn-ctrl {
  width: 48rpx;
  height: 48rpx;
  background: #f66;
  position: absolute;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
}
.btn-ctrl:after {
  position: absolute;
  display: block;
  content: '';
  width: 30rpx;
  height: 4rpx;
  background: #fff;
  border-radius: 2rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.btn-ctrl:before {
  position: absolute;
  display: block;
  content: '';
  width: 4rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 2rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.btn-ctrl.btn-reduce {
  left: 0;
}
.btn-ctrl.btn-reduce:before {
  display: none;
}
.btn-ctrl.btn-add {
  right: 0;
}
.btn-ctrl.disabled {
  background: #ccc;
}
.btn-ctrl:not(.disabled):active {
  opacity: .8;
}
.select-num {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #333;
  font-size: 30rpx;
  text-align: center;
}
.select-num-over {
  position: absolute;
  width: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #333;
  font-size: 30rpx;
  text-align: center;
}
.form-item {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  color: #444;
  display: flex;
  align-content: center;
  justify-content: center;
  border-bottom: 1rpx solid #ebebeb;
  position: relative;
}
.form-item label {
  flex: 1.2;
  font-weight: bold;
}
.form-item input {
  flex: 4;
  height: 89rpx;
}
.form-item .piker-box {
  flex: 4;
  height: 89rpx;
  display: flex;
}
.form-item .piker-box picker {
  flex: 2;
}
.form-item .piker-box picker:first-child {
  flex: 1;
}
.form-item.title {
  font-size: 30rpx;
}
.slide-layer {
  position: absolute;
  bottom: 90rpx;
  left: 0;
  right: 0;
  background: #fff;
  padding: 0 20rpx;
  z-index: 10;
  transform: translateY(100%);
  animation: slideOpen 0.2s forwards ease-in-out;
  transform-origin: bottom center;
}
.slide-layer.close {
  transform: translateY(0);
  animation: slideClose 0.2s forwards ease-in-out;
}
.slide-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1;
  opacity: 0;
  animation: maskLayer 0.1s forwards ease-out;
}
.slide-mask.close {
  opacity: 1;
  animation: closeMaskLayer 0.2s forwards ease-out;
}
@keyframes slideOpen {
  0% {
    transform: translateY(100%);
  }
  100% {
    transform: translateY(0);
  }
}
@keyframes slideClose {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(100%);
  }
}
@keyframes maskLayer {
  form {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes closeMaskLayer {
  form {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.slide-head {
  border-bottom: 1rpx dashed #ccc;
  line-height: 80rpx;
  padding: 0;
  position: relative;
}
.slide-head .slide-close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 0;
  top: 16rpx;
}
.slide-head .slide-close:after {
  position: absolute;
  display: block;
  content: '';
  width: 40rpx;
  height: 2rpx;
  background: #ccc;
  border-radius: 2rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}
.slide-head .slide-close:before {
  position: absolute;
  display: block;
  content: '';
  width: 2rpx;
  height: 40rpx;
  background: #ccc;
  border-radius: 2rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}
