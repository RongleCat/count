.page {
  width: 100vw;
  height: 100vh;
  z-index: 10;
  padding-bottom: 90rpx;
  position: relative;
}
.page,
.page view,
.page block,
.page scroll-view,
.page image {
  box-sizing: border-box;
}
.bottom-bar {
  width: 100%;
  height: 90rpx;
  display: flex;
  line-height: 90rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 20;
}
.bottom-bar view {
  flex: 1;
  border-right: 1rpx #fff dashed;
  background: #26c6da;
}
.bottom-bar view:not(.disabled):active {
  opacity: 0.8;
}
.bottom-bar view:last-child {
  border: 0;
}
.bottom-bar .btn-join {
  flex: 2;
}
.bottom-bar .btn-join.disabled {
  background: #ccc;
}
.dteail-content {
  width: 100%;
  height: 100%;
