.page {
  width: 100vw;
  height: 100vh;
  padding-bottom: 90rpx;
  position: relative;
}
.page,
.page view,
.page block,
.page scroll-view,
.page image {
  box-sizing: border-box;
}
.create-form {
  height: 100%;
  padding: 20rpx;
  background: #f0f0f0;
}
.form-block {
  border-radius: 10rpx;
  padding: 0 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.form-block > view:last-child {
  border: 0;
}
.form-block .form-block-title {
  line-height: 90rpx;
  font-size: 30rpx;
  color: #444;
  font-weight: bold;
}
.form-block .form-block-tip {
  line-height: 90rpx;
  height: 60rpx;
  font-size: 26rpx;
  color: #444;
  font-weight: bold;
}
.form-item {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  color: #444;
  display: flex;
  align-content: center;
  justify-content: center;
  border-bottom: 1rpx solid #ebebeb;
}
.form-item label {
  flex: 1.2;
  font-weight: bold;
}
.form-item input {
  flex: 4;
  height: 89rpx;
}
.form-item .piker-box {
  flex: 4;
  height: 89rpx;
}
.form-item.title {
  font-size: 30rpx;
}
.form-image-box {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
}
.form-image-box .image-box {
  width: 126rpx;
  height: 126rpx;
  min-width: 126rpx;
  margin-right: 10rpx;
  position: relative;
}
.form-image-box .image-box image {
  width: 100%;
  height: 100%;
}
.form-image-box .image-box:last-child {
  margin-right: 0;
}
.form-image-box .add-image {
  position: relative;
  border: 1rpx solid #ccc;
}
.form-image-box .add-image:before {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90rpx;
  height: 4rpx;
  content: '';
  background: #ccc;
  position: absolute;
}
.form-image-box .add-image:after {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 4rpx;
  height: 90rpx;
  content: '';
  background: #ccc;
  position: absolute;
}
.form-image-box .uploading-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.4);
}
.form-image-box .uploading-layer .progress-bar {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  height: 20rpx;
  background: #eee;
}
.form-image-box .uploading-layer .progress-bar .complete-progress {
  height: 100%;
  width: 0;
  background: #51c332;
}
.form-image-box .btn-img-delete {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 0 0 0 10rpx;
}
.form-image-box .btn-img-delete:before {
  position: absolute;
  top: 50%;
  left: 50%;
  content: '';
  width: 2rpx;
  height: 30rpx;
  background: #fff;
  transform: translate(-50%, -50%) rotate(45deg);
}
.form-image-box .btn-img-delete:after {
  position: absolute;
  top: 50%;
  left: 50%;
  content: '';
  width: 2rpx;
  height: 30rpx;
  background: #fff;
  transform: translate(-50%, -50%) rotate(-45deg);
}
.add-good-block {
  padding: 20rpx;
  padding-top: 0;
  border: 1rpx solid #ebebeb;
  border-radius: 20rpx;
}
.btn-comfirm-good {
  height: 80rpx;
  width: 100%;
  background: #51c332;
  border-radius: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
}
.btn-comfirm-good:active {
  opacity: .8;
}
.btn-add-good {
  height: 80rpx;
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 78rpx;
  color: #51c332;
  font-size: 30rpx;
  border: 1rpx solid #51c332;
}
.btn-add-good:active {
  background: #51c332;
  color: #fff;
}
.null-block {
  height: 1rpx;
  margin-top: 19rpx;
}
.btn-create-sumit {
  height: 90rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #fff;
  background-image: linear-gradient(to right, #26c6da 0%, #1cd9fe 100%);
}
.goods-item {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  padding: 20rpx;
  padding-bottom: 0;
  position: relative;
  color: #444;
}
.goods-item .good-name {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 30rpx;
}
.goods-item .good-info {
  margin-top: 24rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}
.goods-item .good-price {
  color: #f66;
}
.btn-del-good {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  border: 1rpx solid #ccc;
}
.btn-del-good:before {
  position: absolute;
  top: 50%;
  left: 50%;
  content: '';
  width: 4rpx;
  height: 36rpx;
  background: #ccc;
  transform: translate(-50%, -50%) rotate(45deg);
}
.btn-del-good:after {
  position: absolute;
  top: 50%;
  left: 50%;
  content: '';
  width: 4rpx;
  height: 36rpx;
  background: #ccc;
  transform: translate(-50%, -50%) rotate(-45deg);
}
.btn-edit-good {
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  right: 110rpx;
  transform: translateY(-50%);
}
.btn-edit-good .icon-edit {
  height: 38rpx;
  width: 8rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}
.btn-edit-good .icon-edit span {
  display: block;
}
.btn-edit-good .icon-edit .dot {
  width: 8rpx;
  height: 6rpx;
  background: #ccc;
}
.btn-edit-good .icon-edit .pen {
  height: 20rpx;
  width: 8rpx;
  background: #ccc;
  margin-top: 2rpx;
}
.btn-edit-good .icon-edit .head {
  width: 0;
  height: 0;
  border-left: 4rpx solid transparent;
  border-right: 4rpx solid transparent;
  border-top: 8rpx solid #ccc;
  margin-top: 2rpx;
}
