<view class="page">
    <view class="tab-bar">
        <view class="tab-item {{index==tabSelect?'active':''}}" wx:for="{{tabList}}" wx:key="*this" data-index="{{index}}" bindtap="changeTab">
            {{item}}
        </view>
    </view>
    <scroll-view scroll-y="true" class="order-list" lower-threshold="50" bindscrolltolower="InfiniteLoad">
        <view class="order-item" wx:for="{{list}}" wx:key="*this.PublishTime" data-id="{{item.Id}}" bindtap="goOrderDetail">
            <view class="order-title">{{item.Title}}</view>
            <view class="order-time">{{item.PublishTime}}</view>
            {{status[item.Status]}}
        </view>
        <view class="no-item" wx:if="{{list.length == 0}}">暂无接龙</view>
        <view class="mb"></view>
    </scroll-view>
    <view class="btn-create">
        <navigator url="../create/create" hover-class="active">新建拼团</navigator>
    </view>
</view>